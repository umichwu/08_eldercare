{
  "name": "eldercare-companion-system",
  "version": "2.0.0",
  "description": "ElderCare Companion System - 長輩陪伴智能系統 (PWA)",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd backend && npm run dev",
    "dev:frontend": "live-server frontend/public --port=8080 --host=localhost --open=/login.html",
    "start": "npm run dev",
    "backend": "cd backend && npm start",
    "build": "npm run build:frontend && npm run build:backend",
    "build:frontend": "cp -r frontend/public ./public",
    "build:backend": "echo 'Backend will be deployed as serverless function'",
    "test": "echo 'Running tests...' && npm run test:backend",
    "test:backend": "cd backend && npm test"
  },
  "keywords": [
    "eldercare",
    "ai",
    "chat",
    "pwa",
    "supabase",
    "openai"
  ],
  "author": "Gilbert",
  "license": "MIT",
  "dependencies": {
    "@supabase/supabase-js": "^2.39.0",
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "openai": "^4.20.1",
    "uuid": "^9.0.1",
    "express-session": "^1.17.3",
    "body-parser": "^1.20.2"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "live-server": "^1.2.2"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=9.0.0"
  }
}
