# Supabase Configuration
SUPABASE_URL=https://nxgltttpllzmdvuritik.supabase.co
SUPABASE_ANON_KEY=your_anon_key_here
# Service Role Key (具有完整資料庫權限，僅限後端使用)
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here

# LLM Configuration
# 可選的提供商: openai, gemini, deepseek (默認為gemini)
LLM_PROVIDER=gemini

# OpenAI Configuration
# 獲取API密鑰: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o-mini

# Google Gemini Configuration
# 獲取API密鑰: https://aistudio.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# Deepseek Configuration
# 獲取API密鑰: https://platform.deepseek.com/api_keys
DEEPSEEK_API_KEY=your_deepseek_api_key_here

# Firebase Configuration (FCM 推送通知)
# 獲取方式:
# 1. 前往 Firebase Console: https://console.firebase.google.com/
# 2. 選擇專案 > 專案設定 > 服務帳戶
# 3. 產生新的私密金鑰 (會下載 JSON 檔案)
# 4. 從 JSON 檔案中複製以下欄位:
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_CLIENT_EMAIL=firebase-adminsdk@your-project.iam.gserviceaccount.com
# 注意: FIREBASE_PRIVATE_KEY 必須保持 \n 格式
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYour\nPrivate\nKey\nHere\n-----END PRIVATE KEY-----\n"

# Application Settings
APP_PORT=3000
APP_HOST=0.0.0.0
NODE_ENV=development

# Frontend URL (用於 CORS 設定)
FRONTEND_URL=https://your-frontend.vercel.app

# Session Settings
SESSION_SECRET=your_random_session_secret_here

# Feature Flags
ENABLE_AUTO_SUMMARY=true
AUTO_SUMMARY_THRESHOLD=20
ENABLE_VOICE=true
ENABLE_SOS=true

# Emergency Contact (for SOS feature)
EMERGENCY_PHONE=+886900000000
EMERGENCY_EMAIL=emergency@example.com

# ==================== Email Notification Service (Resend) ====================
# 用藥提醒 Email 通知服務
# 獲取 API Key:
# 1. 前往 Resend: https://resend.com/
# 2. 註冊/登入帳號
# 3. 前往 Dashboard > API Keys
# 4. 點擊 "Create API Key"
# 5. 選擇 "Sending access" 權限
# 6. 複製 API Key (re_xxxxxx...)
RESEND_API_KEY=re_your_resend_api_key_here

# 發件人 Email 設定
# 選項 1: 使用自己的域名 (推薦，需先在 Resend Dashboard 驗證域名)
# RESEND_FROM_EMAIL=ElderCare <noreply@yourdomain.com>
#
# 選項 2: 使用 Resend 測試域名 (僅限開發測試)
# RESEND_FROM_EMAIL=ElderCare <onboarding@resend.dev>
#
# 選項 3: 使用已驗證的單一 Email 地址
# RESEND_FROM_EMAIL=ElderCare <your.verified@email.com>
RESEND_FROM_EMAIL=ElderCare <noreply@yourdomain.com>

# 免費方案限制:
# - 每月 3,000 封 Email
# - 每天 100 封 Email
# - 需要驗證發件人域名或 Email
# 詳細設定請參考: MEDICATION_REMINDER_SETUP.md
